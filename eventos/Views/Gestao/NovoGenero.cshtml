@model eventos.DTO.GeneroDTO
@{
    Layout = "_LayoutAdmin";
}
<div class="container-fluid">
<h3>Novo Genero</h3>
<hr/>
<form class="form-horizontal" asp-controller="Generos" asp-action="Salvar" method="POST">
    <input type="hidden" asp-for="Id" value="0">
    <label asp-for="Nome">Nome</label>
    <input type="text" asp-for="Nome" maxlength="200" class="form-control" placeholder="Nome do genero">
    <span asp-validation-for="Nome"></span><br/>
    <button class="btn btn-success">Cadastrar</button>
</form></div>