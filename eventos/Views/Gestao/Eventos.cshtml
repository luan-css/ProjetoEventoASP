@model IEnumerable<eventos.Models.Evento>
@{
    Layout = "_LayoutAdmin";
}
<div class="container-fluid">
<h2>Eventos</h2>
<hr/>
<a asp-action="NovoEvento" asp-controller="Gestao" class="btn btn-success">Criar novo evento</a>
<hr/> 
</div>
<script>
    $(document).ready( function () {
    $('#eventos').DataTable();
} );
</script>
<table id="eventos" class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Estoque</th>
            <th>Data</th>
            <th>Genero</th>
            <th>Casa de Show</th>
            <th>Valor do ingresso</th>
            <th>Ac√µes</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var evento in  Model){
            <tr>
                <td>@evento.Id</td>
                <td>@evento.Nome</td>
                <td>@evento.capacidade</td>
                <td>@evento.Data</td>
                <td>@evento.Genero.Nome</td>
                <td>@evento.Casa.Nome</td>
                <td>R$ @evento.ValorIngresso</td>
                <td>
                    <a class="btn btn-primary" href="/Gestao/EditarEvento/@evento.Id">Editar</a>
                    <form style="display: inline;" asp-controller="Eventos" asp-action="Deletar" >
                        <input type="hidden" name="id" id="id" value="@evento.Id">
                        <button class="btn btn-danger">Deletar</button>

                    </form>
                </td>
            </tr>
        } 
    </tbody>
</table>
</div>
