@model IEnumerable<eventos.Models.Genero>
@{
    Layout = "_LayoutAdmin";
}
<div class="container-fluid">
<h2>Generos</h2>
<hr/>
<a asp-action="NovoGenero" asp-controller="Gestao" class="btn btn-success">Criar novo genero</a>
<hr/> 
<script>
    $(document).ready( function () {
    $('#generos').DataTable();
} );
</script>
<table id="generos" class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Ac√µes</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var genero in  Model){
            <tr>
                <td>@genero.Id</td>
                <td>@genero.Nome</td>
                <td>
                    <a class="btn btn-primary" href="/Gestao/EditarGenero/@genero.Id">Editar</a>
                        <form asp-action="Deletar" asp-controller="Generos" style="display:inline">
                        <input type="hidden" name="id" id="id" value="@genero.Id">
                    <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        } 
    </tbody>
</table>
</div>
